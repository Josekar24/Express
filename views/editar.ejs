<h1 class="text-center text-3xl font-bold mt-6 text-gray-800">Editar Moto</h1>

<%- include('template/header', {tituloWeb: 'Editar Moto'}) %>

<form action="/editar/<%= moto._id %>" method="POST" class="max-w-lg mx-auto bg-white p-8 shadow-lg rounded-lg">
    <div class="mb-4">
        <label for="marca" class="block text-gray-700">Marca</label>
        <input type="text" id="marca" name="marca" value="<%= moto.marca %>" class="w-full mt-2 p-2 border border-gray-300 rounded-md" required>
    </div>
    <div class="mb-4">
        <label for="modelo" class="block text-gray-700">Modelo</label>
        <input type="text" id="modelo" name="modelo" value="<%= moto.modelo %>" class="w-full mt-2 p-2 border border-gray-300 rounded-md" required>
    </div>
    <div class="mb-4">
        <label for="cilindrada" class="block text-gray-700">Cilindrada (cc)</label>
        <input type="number" id="cilindrada" name="cilindrada" value="<%= moto.cilindrada %>" class="w-full mt-2 p-2 border border-gray-300 rounded-md" required>
    </div>
    <div class="mb-4">
        <label for="descripcion" class="block text-gray-700">Descripci√≥n</label>
        <textarea id="descripcion" name="descripcion" class="w-full mt-2 p-2 border border-gray-300 rounded-md" required><%= moto.descripcion %></textarea>
    </div>
    <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md mt-4 hover:bg-blue-600">Actualizar Moto</button>
</form>

<%- include('template/footer') %>