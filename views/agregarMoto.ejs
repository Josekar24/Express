<%- include("template/header", {tituloWeb: "Agregar Moto"}) %>

<!-- Formulario para agregar moto -->
<div class="max-w-lg mx-auto mt-8">
    <form action="/motos/agregar" method="POST" class="bg-white p-6 rounded-lg shadow-md">
        <div class="mb-4">
            <label for="marca" class="block text-gray-700">Marca</label>
            <input type="text" name="marca" id="marca" class="w-full px-4 py-2 border rounded-lg" required>
        </div>
        <div class="mb-4">
            <label for="modelo" class="block text-gray-700">Modelo</label>
            <input type="text" name="modelo" id="modelo" class="w-full px-4 py-2 border rounded-lg" required>
        </div>
        <div class="mb-4">
            <label for="cilindrada" class="block text-gray-700">Cilindrada (cc)</label>
            <input type="number" name="cilindrada" id="cilindrada" class="w-full px-4 py-2 border rounded-lg" required>
        </div>
        <div class="mb-4">
            <label for="descripcion" class="block text-gray-700">Descripci√≥n</label>
            <textarea name="descripcion" id="descripcion" class="w-full px-4 py-2 border rounded-lg" required></textarea>
        </div>
        <div class="flex justify-center">
            <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-700">Agregar Moto</button>
        </div>
    </form>
</div>

<%- include("template/footer") %>