<%- include("template/cabecera", { tituloWeb: moto.marca + ' ' + moto.modelo }) %>

<div class="container mt-5">
    <h1 class="text-center"><%= moto.marca %> - <%= moto.modelo %></h1>

    <div class="row">
        <div class="col-md-6">
            <% if (moto.imagen) { %>
                <img src="<%= moto.imagen %>" class="img-fluid rounded shadow" alt="<%= moto.modelo %>">
            <% } else { %>
                <p class="text-muted text-center">Sin imagen disponible</p>
            <% } %>
        </div>

        <div class="col-md-6">
            <h3>Detalles de la Moto</h3>
            <ul class="list-group">
                <li class="list-group-item"><strong>Marca:</strong> <%= moto.marca %></li>
                <li class="list-group-item"><strong>Modelo:</strong> <%= moto.modelo %></li>
                <li class="list-group-item"><strong>Cilindrada:</strong> <%= moto.cilindrada %> cc</li>
                <li class="list-group-item"><strong>Descripci√≥n:</strong> <%= moto.descripcion %></li>
            </ul>

            <div class="mt-4">
                <a href="/motos" class="btn btn-secondary">Volver a la Lista</a>
                <a href="/motos/editar/<%= moto._id %>" class="btn btn-warning">Editar</a>
                <form action="/motos/<%= moto._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("template/footer") %>
