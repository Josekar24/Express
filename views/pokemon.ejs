<%- include("cabecera", { tituloWeb: 'Lista de Pokémon' }) %>
<div class="container">
    <h2>Listado de Pokémon</h2>
    <a href="/pokemon/crear" class="btn btn-primary my-2">Nuevo Pokémon</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% pokemones.forEach(pokemon => { %>
                <tr>
                    <td><%= pokemon.id %></td>
                    <td><%= pokemon.nombre %></td>
                    <td><%= pokemon.tipo %></td>
                    <td><%= pokemon.descripcion %></td>
                    <td>
                        <a href="/pokemon/<%= pokemon._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/pokemon/<%= pokemon._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include("footer") %>